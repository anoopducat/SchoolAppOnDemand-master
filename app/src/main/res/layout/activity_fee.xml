<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.schoolappondemand.Fee">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include" />

    <TextView
        android:textSize="20sp"
       android:text="Total Fee"
       android:layout_marginStart="180dp"
       android:gravity="center"
       android:layout_marginTop="20dp"
       android:layout_below="@+id/tv_tt"
       android:id="@+id/fee_ttl"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/fee_ttl"
        android:weightSum="3"
        android:id="@+id/linerprent"
        android:orientation="horizontal"
        >

    <LinearLayout
        android:id="@+id/l_l1"
        android:background="#673AB7"
        android:layout_below="@+id/progressBar2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="1"
        >
        <TextView

            android:id="@+id/tv_ttl_fee"
            android:text="TotalFee"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/colorWhite"
            android:layout_marginTop="28dp"
            android:text="Total"
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/l_l2"
            android:background="#3F51B5"
            android:layout_below="@+id/progressBar2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1">
            <TextView

                android:layout_gravity="center"
                android:id="@+id/tv_due_fee"
                android:text="DueFee"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="25dp"
                android:textSize="15sp"
                android:text="Due"
                android:textColor="@color/colorWhite"
                android:id="@+id/due_fee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l_l3"
            android:background="#2196F3"
            android:layout_below="@+id/progressBar2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1">
            <TextView
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:id="@+id/tv_nt_tttl"
                android:text="NetTotal"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:text="Net"
                android:layout_marginTop="32dp"
                android:id="@+id/nt_ttl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/fee_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linerprent"
        android:text="fees   detail"
        android:layout_marginTop="90dp"/>

    <TextView
        android:textSize="20sp"
        android:text="Fee"
        android:layout_marginTop="116dp"
        android:id="@+id/tv_tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_alignRight="@+id/fee_ttl"
        android:layout_alignEnd="@+id/fee_ttl"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="29dp" />

</RelativeLayout>
