<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/dashboard"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.admin.schoolappondemand.ProfilePage"
    tools:showIn="@layout/app_bar_profile_page">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.admin.schoolappondemand.Home">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="#008afa"
                    android:id="@+id/lyout_pf"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <TextView
                        android:id="@+id/title_name"
                        android:textColor="@color/colorWhite"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="15dp"
                        android:textSize="17sp"
                        android:layout_width="150dp"

                        android:layout_height="wrap_content"
                        android:text="Name" />
                    <TextView

                        android:textColor="@color/colorWhite"
                        android:id="@+id/title_class"

                        android:textSize="17sp"
                        android:layout_width="140dp"
                        android:layout_marginLeft="75dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:text="Class Name" />
                </LinearLayout>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:elevation="5dp"
                    android:layout_marginTop="-20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#0091EA"
                    android:background="@drawable/imagecircle"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/cimageView" />
            </RelativeLayout>
        </FrameLayout>





        <GridView
            android:layout_marginTop="80dp"
            android:id="@+id/gv1"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:layout_marginLeft="1dp"
            android:horizontalSpacing="1dp"
            android:verticalSpacing="1dp"
            android:layout_marginBottom="45dp"

            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </GridView>


        <FrameLayout
            android:background="@color/colorIndigo"
            android:id="@+id/mainRLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
        </FrameLayout >


    </RelativeLayout>



</RelativeLayout>
