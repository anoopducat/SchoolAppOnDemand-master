<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/fee_card"
        cardview:cardCornerRadius="15dp"
        cardview:cardBackgroundColor="#CFD8DC"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/lyt_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="125dp"
              android:textColor="@color/colorBlack"
                android:text="SKETING"
                android:textSize="20sp"
                android:id="@+id/skating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_skt_total"
                android:layout_below="@+id/skating"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="20dp"
                android:text="Total Fee :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:text="Total"
                android:id="@+id/skt_fee_ttl"
                android:layout_marginLeft="120dp"
                android:layout_below="@id/skating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:text="Paid Fee :"
                android:layout_marginLeft="240dp"
                android:layout_below="@+id/skating"
                android:id="@+id/tv_skt_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Paid"
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_marginLeft="330dp"
                android:layout_below="@+id/skating"
                android:id="@+id/paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Due Fee :"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_skt_due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_skt_total"/>
            <TextView
                android:text="Due"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="63dp"
                android:layout_marginLeft="120dp"
                android:layout_below="@+id/total"
                android:id="@+id/due"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="260dp"
                android:text="Date :"
                android:textSize="15sp"
                android:id="@+id/dt"
                android:textColor="@color/colorBlack"
                android:layout_below="@+id/paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>