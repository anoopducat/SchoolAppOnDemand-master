<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/fee_card"
        cardview:cardCornerRadius="15dp"
        cardview:cardBackgroundColor="#CFD8DC"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">
        <RelativeLayout
            android:id="@+id/lyt_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:text="Reciept No         :"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="9dp"
                android:id="@+id/tv_rcpt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/tv_rcpt"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:text="Reciept"
                android:id="@+id/rcpt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:text="Fee Pay. Date         :"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="9dp"
                android:id="@+id/tv_fpdt"
                android:layout_below="@id/tv_rcpt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/tv_fpdt"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp"
                android:layout_below="@id/tv_rcpt"
                android:text="Pay Date"
                android:id="@+id/fpdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:text="Total Fee         :"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="9dp"
                android:id="@+id/tv_ttlf"
                android:layout_below="@id/tv_fpdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/tv_rcpt"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp"
                android:text="Total"
                android:id="@+id/ftt"
                android:layout_below="@id/tv_fpdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:text="Fine         :"
                android:layout_below="@id/tv_ttlf"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="9dp"
                android:id="@+id/tv_fine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/tv_fine"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp"
                android:text="Fine"
                android:id="@+id/fine"
                android:layout_below="@id/tv_ttlf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:text="Concession         :"
                android:layout_below="@id/tv_fine"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="9dp"
                android:id="@+id/tv_cnsn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/tv_fine"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp"
                android:text="Concession"
                android:id="@+id/cnsn"
                android:layout_below="@id/tv_fine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:text="Hostal Charges:"
                android:layout_below="@id/tv_cnsn"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="9dp"
                android:id="@+id/tv_hstl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/tv_fine"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp"
                android:text="Hostal"
                android:id="@+id/hstl"
                android:layout_below="@id/tv_cnsn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />






            <TextView
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:text="Net Total         :"
                android:layout_below="@id/tv_hstl"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="9dp"
                android:id="@+id/tv_nttl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/tv_hstl"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp"
                android:text="Net Total"
                android:id="@+id/nftt"
                android:layout_below="@id/tv_hstl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:text="Paid Fee         :"
                android:layout_below="@id/tv_nttl"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="9dp"
                android:id="@+id/tv_fped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/tv_fped"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp"
                android:text="Paid"
                android:id="@+id/ped"
                android:layout_below="@id/tv_nttl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:text="Balence Fee         :"
                android:layout_below="@id/tv_fped"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="9dp"
                android:id="@+id/tv_fblnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/tv_fblnc"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp"
                android:text="Balence"
                android:id="@+id/blnc"
                android:layout_below="@id/tv_fped"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:textSize="15sp"
                android:textColor="@color/colorBlack"
                android:text="Payment Type         :"
                android:layout_below="@id/tv_fblnc"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="9dp"
                android:id="@+id/tv_pmnttp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/tv_pmnttp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp"
                android:text="Payment "
                android:id="@+id/pmnttp"
                android:layout_below="@id/tv_fblnc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>