<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:id="@+id/progressBar2"
        android:indeterminateTint="@color/colorBlue"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >
        <TextView
            android:id="@+id/prgss_tv"
            android:text="Amount........"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </ProgressBar>>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/progressBar2"
        android:weightSum="3"
        android:id="@+id/linerprent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/l_l1"
            android:background="#673AB7"
            android:layout_below="@+id/progressBar2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            >
            <TextView

                android:id="@+id/tv_amount1"
                android:text="Amount1"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_l2"
            android:background="#3F51B5"
            android:layout_below="@+id/progressBar2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1">
            <TextView

                android:layout_gravity="center"
                android:id="@+id/tv_amount2"
                android:text="Amount2"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginLeft="20dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l_l3"
            android:background="#2196F3"
            android:layout_below="@+id/progressBar2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1">
            <TextView
                android:paddingLeft="10dp"
                android:layout_gravity="center"
                android:id="@+id/tv_amount3"
                android:text="Amount3"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linerprent"
        android:text="fees   detail"
        android:layout_marginTop="60dp"/>

</RelativeLayout>