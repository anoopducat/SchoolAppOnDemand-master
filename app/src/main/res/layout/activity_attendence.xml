<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_attendence"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.schoolappondemand.Attendence">


    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include" />

    <LinearLayout
        android:layout_below="@+id/include"
        android:id="@+id/lytc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <CalendarView
        android:scrollbars="none"
        android:maxDate="01/01/2018"
        android:minDate="01/01/2016"
        android:layout_marginTop="18dp"
        android:id="@+id/calendarView"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    </LinearLayout>
    <LinearLayout

        android:id="@+id/lyoutat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/lytc"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="14dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:id="@+id/tvp"
            android:layout_marginLeft="5dp"
            android:text="P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/c1"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/ivp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:text="A"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/tva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/c2"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/iva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="25dp"
            android:text="L"
            android:id="@+id/tvl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/c3"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/ivl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="25dp"
            android:text="H"
            android:id="@+id/tvh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ivh"
            android:src="@drawable/c4"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</RelativeLayout>
