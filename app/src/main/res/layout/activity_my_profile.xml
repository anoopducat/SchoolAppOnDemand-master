<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_profile"
    android:layout_width="match_parent"
    android:background="@drawable/dashboard"
    android:layout_height="match_parent"
    tools:context="com.example.admin.schoolappondemand.MyProfile">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include" />

    <TextView
        android:text="Hello I am User"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:id="@+id/profile_tv_name" />

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="33dp"
        android:id="@+id/imageView"
        android:background="@drawable/if_profile"
        android:layout_below="@+id/profile_tv_name"
        android:layout_marginLeft="15dp"

         />




    <TextView
        android:text="Admission No :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="123dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:id="@+id/Admission"

      android:layout_marginTop="100dp"  />

    <TextView
        android:text="3050"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:id="@+id/profile_ad_no"
        android:layout_alignBaseline="@+id/Admission"
        android:layout_alignBottom="@+id/Admission"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="250dp"
         />

    <TextView
        android:text="Class :"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
       android:layout_marginLeft="180dp"
        android:layout_marginTop="-50dp"
        android:textStyle="bold"
        android:id="@+id/tv_class" />

    <TextView
        android:text="VII"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/tv_class"
        android:layout_alignRight="@+id/profile_ad_no"
        android:layout_alignEnd="@+id/profile_ad_no"
        android:layout_marginRight="35dp"
        android:layout_marginEnd=".1dp"
        android:layout_marginStart="200dp"
        android:id="@+id/profile_tv_cls" />







    <TextView
        android:text="Class Teacher :"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_class"
        android:layout_marginTop="13dp"

        android:textStyle="bold"
        android:layout_marginStart="125dp"
        android:id="@+id/tv_cls_taecher" />

    <TextView
        android:text="Susmita Singh"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_cls_taecher"
       android:layout_marginStart="250dp"
        android:textStyle="bold"
        android:layout_marginRight="94dp"
        android:id="@+id/profile_tv_teacher" />


    <TextView
        android:text=""
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_cls_taecher"
        android:layout_alignLeft="@+id/tv_cls_taecher"
        android:layout_alignStart="@+id/tv_cls_taecher"
        android:layout_marginTop="37dp"
        android:id="@+id/tv_mobile" />






    <TextView
        android:text="My Family :"
        android:textColor="@color/colorBlack"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mobile"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="-30dp"
        android:id="@+id/t_family" />
    <ImageView
        android:layout_marginLeft="15dp"
        android:background="@drawable/f1"
        android:layout_below="@id/t_family"
        android:id="@+id/f_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginLeft="15dp"
        android:background="@drawable/f2"
        android:layout_marginTop="5dp"
        android:layout_below="@id/f_img"
        android:id="@+id/m_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginLeft="15dp"
        android:background="@drawable/f3"
        android:layout_marginTop="5dp"
        android:layout_below="@id/m_img"
        android:id="@+id/mobl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginLeft="15dp"
        android:background="@drawable/f4"
        android:layout_marginTop="5dp"
        android:layout_below="@id/mobl"
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Saroj Singh"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_family"
        android:layout_alignLeft="@+id/tv_mobile"
        android:layout_alignStart="@+id/tv_mobile"
        android:layout_marginTop="17dp"
        android:id="@+id/profile_father" />

    <TextView
        android:text="Mamata Singh"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_father"
        android:layout_alignLeft="@+id/profile_father"
        android:layout_alignStart="@+id/profile_father"
        android:layout_marginTop="17dp"
        android:id="@+id/profile_mother" />

    <TextView
        android:text="Mob No"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_mother"

        android:textStyle="bold"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="17dp"
        android:id="@+id/tv_profile_mob" />

    <TextView
        android:text="Email"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_profile_mob"

        android:textStyle="bold"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="17dp"
        android:id="@+id/tv_profile_email" />




    <TextView
        android:text="MyAddress :"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginTop="17dp"
        android:id="@+id/tv_address" />

    <TextView
        android:text="Address"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profile_address"
        android:layout_below="@+id/tv_address"

        android:layout_marginLeft="20dp"
        android:paddingTop="20dp"

        />


</RelativeLayout>

