<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_health_care"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.schoolappondemand.HealthCare">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include" />

    <ImageView
        android:src="@drawable/healthcare"
        android:layout_marginTop="63dp"
        android:id="@+id/iv_healthcr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.CardView
        android:layout_below="@+id/iv_healthcr"
        android:id="@+id/hlth_card"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="110dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:text="Student OPD Id    : "
                android:id="@+id/opd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:text="Id"
                android:layout_marginLeft="220dp"
                android:id="@+id/sopd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:text="Treatement Date  :"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/opd"
                android:layout_marginLeft="10dp"
                android:id="@+id/trtdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:text="Date"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/sopd"
                android:layout_marginLeft="220dp"
                android:id="@+id/tv_trtdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:text="Doctor Name        :"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/trtdt"
                android:id="@+id/doctornm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:text="Name"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tv_trtdt"
                android:layout_marginLeft="220dp"
                android:id="@+id/tv_dt_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="20sp"
                android:text="Remark                  :"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/doctornm"
                android:id="@+id/remrk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:text="Remark"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="220dp"
                android:layout_below="@+id/tv_dt_nm"
                android:id="@+id/tv_rmrk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
