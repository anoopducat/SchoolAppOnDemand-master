<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_transport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.admin.schoolappondemand.Transport">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/include" />


<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:layout_marginTop="10dp"
    android:id="@+id/l1_ivbtn"
  android:layout_below="@+id/include"
    android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="109dp"
        android:id="@+id/iv_btn_bs"
        app:civ_border_color="#3e3a3a"
        app:civ_border_width="2dp"
        android:src="@drawable/t1"
        android:layout_marginLeft="00dp"
    android:background="@drawable/ring"
        android:layout_weight="0.3"
    />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="109dp"
        android:id="@+id/driver"
        app:civ_border_color="#3e3a3a"
        app:civ_border_width="2dp"
        android:layout_weight="0.3"
        android:layout_marginLeft="10dp"
        android:src="@drawable/t2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/incharger"
        android:layout_width="90dp"
        android:layout_height="109dp"
        app:civ_border_color="#3e3a3a"
        app:civ_border_width="2dp"

        android:layout_weight="0.3"
        android:src="@drawable/t3"
        android:layout_marginLeft="25dp"/>


</LinearLayout>

    <LinearLayout

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/liner_for_detail1"
        android:orientation="vertical"
        android:layout_below="@+id/l1_ivbtn"
        android:layout_marginLeft="5dp">


        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/layout_bs_dt">
            <TextView
                android:id="@+id/tv_bs_dtl"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="BUS STOP DETAIL"
                android:textSize="20sp"
                android:layout_marginLeft="100dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/tv_textfordetail"
            >
            <TextView
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_pkrt"
                android:text="Pickup Route :"/>
            <TextView
                android:layout_marginLeft="24dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pk_rt"
                android:text="N/A"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/tv_textfordetail1"
            >
            <TextView
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_pkst"
                android:text="pickup Stop   :"/>
            <TextView
                android:layout_marginLeft="24dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pk_stp"
                android:text="Private "/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/tv_textfordetail2"
            >
            <TextView
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_pktm"
                android:text="Pickup Time  :"/>
            <TextView
                android:layout_marginLeft="24dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pk_tm"
                android:text="N/A"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/tv_textfordetail3"
            >
            <TextView
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_drprt"
                android:text="Drop Route    :"/>
            <TextView
                android:layout_marginLeft="24dp"
                android:textSize="15dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dp_rt"
                android:text="N/A"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/tv_textfordetail4"
            >
            <TextView
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dpstp"
                android:text="Drop Stop      :"/>
            <TextView
                android:layout_marginLeft="24dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dp_stp"
                android:text="Private "/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/tv_textfordetail5"
            >
            <TextView
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dp_tm"
                android:text="Drop Time     :"/>
            <TextView
                android:layout_marginLeft="24dp"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/drp_tim"
                android:text="N/A"/>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="178dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/liner_for_detail"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">





    </LinearLayout>
</RelativeLayout>
